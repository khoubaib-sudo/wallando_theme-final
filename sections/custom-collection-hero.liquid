{% liquid
    if collection.image != blank
      assign image = collection.image
    else
     assign image = section.settings.image
    endif
     assign image = section.settings.image
-%}
   {% comment %} <div class="max-container ">{% render 'breadcrumbs' %}</div>  {% endcomment %}
  <div class="max-container max-hero-container collection-hero-container">

    <a href="#collectionBegin" class="arrow-down"><svg width="61" height="61" viewBox="0 0 61 61" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
      <rect width="61" height="61" fill="url(#pattern0)"/>
      <defs>
      <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
      <use xlink:href="#image0_40_38" transform="scale(0.0111111)"/>
      </pattern>
      <image id="image0_40_38" width="90" height="90" xlink:href="data:image/png;base64,"/>
      </defs>
      </svg>
      </a>
    <div class="proven-expert"><img class="proven-expert-collection-img" src="{{ 'Screenshot_205_1.png' | file_url }}" alt="proven expert">
    </div>

    {%- if image != blank -%}
    {% assign alt = image.alt %}
    {% assign crop = crop | default: 'center' %}
  
      {%
        render 'rimg'
        img: image,
        alt: alt,
        size: '1500x',
        lazy: false,
        crop: crop
      %}
   
    {%- endif -%}

    {% if section.settings.custom_header != blank %}
        <div class="collection-header-container">
            <h1 class="custom-collection-header">
                {{section.settings.custom_header}}
            </h1>
        </div>
    {% endif %}

  </div>

  
  
  {% schema %}
  {
    "name": "Collection Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image Logo"
      },
    {
      "type": "text",
      "id": "custom_header",
      "label": "Header"
    }
    ],
    "presets": [
      {
        "name": "Collection Hero",
        "category": "custom",
        "settings": {}
      }
    ],
    "templates": [
      "index",
      "product",
      "collection",
      "page"
    ]
  }
  
  {% endschema %}