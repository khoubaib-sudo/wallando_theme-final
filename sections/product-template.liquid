{%- assign collection_handles = product.collections | map: 'handle' -%}

{%
  render 'product-section-data',
  product: product,
%}


<script>
  gtag('event', 'page_view', {
    'send_to': 'AW-417828782',
    'value': '{{product.selected_or_first_available_variant.price}},
    'items': [{
      'id': {{product.id}},
      'google_business_vertical': 'retail'
    }]
  });
</script>



<section
  class="product-page"
  data-section-id="{{ section.id }}"
  data-section-type="product-template"
  data-product-component
>
  <div class="breadcrumbs-wrapper">{% render 'preorder-now-collection-item', product: product %}
    {% render 'breadcrumbs' %}
  </div>

  <div class="product-page__content">
    {%
      render 'product',
      product: product,
      select_first_available_variant: settings.select_first_available_variant,
      template: 'product',
      collection_handles: collection_handles,
    %}
  </div>
</section>

